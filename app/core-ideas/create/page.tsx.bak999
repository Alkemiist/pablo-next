                                            <h3 className="text-lg font-bold text-white mb-4">Psychological Triggers</h3>
                                            <div className="mb-4">
                                                <div className="flex items-center justify-between mb-2">
                                                    <span className="text-sm text-pink-400 font-semibold">EMOTIONAL vs RATIONAL</span>
                                                    <span className="text-xl font-bold text-white">{generatedIdea.marketIntelligence.psychological.emotionalVsRational}/10</span>
                                                </div>
                                                <div className="flex gap-2">
                                                    <span className="text-xs text-pink-400">Rational</span>
                                                    <div className="flex-1 bg-neutral-900 rounded-full h-2">
                                                        <div className="h-2 rounded-full bg-gradient-to-r from-purple-500 to-pink-500" style={{
                                                            width: `${generatedIdea.marketIntelligence.psychological.emotionalVsRational * 10}%`
                                                        }}></div>
                                                    </div>
                                                    <span className="text-xs text-pink-400">Emotional</span>
                                                </div>
                                            </div>
                                            <div>
                                                <p className="text-xs text-pink-400 font-semibold mb-2">KEY TRIGGERS</p>
                                                <div className="flex flex-wrap gap-2">
                                                    {generatedIdea.marketIntelligence.psychological.triggers.map((trigger, idx) => (
                                                        <span key={idx} className="px-3 py-1 bg-pink-900/30 border border-pink-700/50 rounded-full text-sm text-pink-300">{trigger}</span>
                                                    ))}
                                                </div>
                                                <p className="text-xs text-neutral-400 mt-3">{generatedIdea.marketIntelligence.psychological.persuasionStrength}</p>
                                            </div>
                                        </div>

                                        <div className="bg-gradient-to-br from-neutral-900/50 to-cyan-950/20 border border-neutral-700/50 rounded-2xl p-6">
                                            <h3 className="text-lg font-bold text-white mb-4">Virality Potential</h3>
                                            <div className="mb-4">
                                                <div className="flex items-center justify-between mb-2">
                                                    <span className="text-sm text-cyan-400 font-semibold">SHAREABILITY SCORE</span>
                                                    <span className="text-3xl font-bold text-white">{generatedIdea.marketIntelligence.virality.shareabilityScore}/10</span>
                                                </div>
                                                <div className="w-full bg-neutral-900 rounded-full h-3">
                                                    <div className="h-3 rounded-full bg-gradient-to-r from-cyan-500 to-blue-500" style={{
                                                        width: `${generatedIdea.marketIntelligence.virality.shareabilityScore * 10}%`
                                                    }}></div>
                                                </div>
                                            </div>
                                            <div className="space-y-2 mb-4">
                                                <div>
                                                    <p className="text-xs text-cyan-400 font-semibold">MEME POTENTIAL</p>
                                                    <p className="text-sm text-white">{generatedIdea.marketIntelligence.virality.memePotential}</p>
                                                </div>
                                                <div>
                                                    <p className="text-xs text-cyan-400 font-semibold">TALKABILITY</p>
                                                    <p className="text-sm text-white">{generatedIdea.marketIntelligence.virality.talkability}</p>
                                                </div>
                                            </div>
                                            <div>
                                                <p className="text-xs text-cyan-400 font-semibold mb-2">VIRAL FACTORS</p>
                                                <div className="flex flex-wrap gap-2">
                                                    {generatedIdea.marketIntelligence.virã‚lity.factors.map((factor, idx) => (
                                                        <span key={idx} className="px-2 py-1 bg-cyan-900/30 border border-cyan-700/50 rounded text-xs text-cyan-300">{factor}</span>
                                                    ))}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    {/* Confidence Radar & Implementation Roadmap */}
                                    <div className="bg-gradient-to-br from-neutral-900/50 to-purple-950/20 border border-neutral-700/50 rounded-2xl p-8">
                                        <h3 className="text-xl font-bold text-white mb-6">Implementation Roadmap</h3>
                                        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
                                            {[
                                                generatedIdea.marketIntelligence.implementationRoadmap.phase1,
                                                generatedIdea.marketIntelligence.implementationRoadmap.phase2,
                                                generatedIdea.marketIntelligence.implementationRoadmap.phase3
                                            ].map((phase, phaseIdx) => (
                                                <div key={phaseIdx} className="bg-neutral-800/50 rounded-xl p-5 border border-neutral-700/50">
                                                    <div className="flex items-center gap-2 mb-3">
                                                        <div className="w-8 h-8 rounded-full bg-purple-500 flex items-center justify-center">
                                                            <span className="text-white font-bold">{phaseIdx + 1}</span>
                                                        </div>
                                                        <div>
                                                            <h4 className="font-semibold text-white">{phase.name}</h4>
                                                            <p className="text-xs text-neutral-400">{phase.timeline}</p>
                                                        </div>
                                                    </div>
                                                    <div className="space-y-3">
                                                        <div>
                                                            <p className="text-xs text-purple-400 font-semibold mb-2">ACTIONS</p>
                                                            <ul className="space-y-1">
                                                                {phase.actions.map((action, idx) => (
                                                                    <li key={idx} className="text-xs text-neutral-300">â€¢ {action}</li>
                                                                ))}
                                                            </ul>
                                                        </div>
                                                        <div>
                                                            <p className="text-xs text-green-400 font-semibold mb-2">QUICK WINS</p>
                                                            <ul className="space-y-1">
                                                                {phase.quickWins.map((win, idx) => (
                                                                    <li key={idx} className="text-xs text-neutral-300">â€¢ {win}</li>
                                                                ))}
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            )}
                        </div>
                    </div>
                ) : (
                    <div className="h-full flex items-center justify-center">
                        <div className="text-center px-4">
                            <Sparkles className="w-16 h-16 text-purple-400/30 mx-auto mb-4" />
                            <p className="text-neutral-500 text-lg">Select your variables and click Create to generate a core idea</p>
                        </div>
                    </div>
                )}
            </div>

            {isBrandOpen && <Modal isOpen={isBrandOpen} onClose={() => setIsBrandOpen(false)}>
                <h2 className="text-xl font-bold mb-4">Select Brand</h2>
                <div className="space-y-2 max-h-96 overflow-y-auto">
                    {getVariablesByType('brand').map(v => (
                        <button key={v.id} onClick={() => handleBrandSelect(v.id)} className="w-full text-left p-3 bg-neutral-800 rounded-lg hover:bg-neutral-700">
                            <p className="font-semibold">{v.name}</p>
                            <p className="text-sm text-neutral-400">{v.description}</p>
                        </button>
                    ))}
                </div>
            </Modal>}

            {isProductOpen && <Modal isOpen={isProductOpen} onClose={() => setIsProductOpen(false)}>
                <h2 className="text-xl font-bold mb-4">Select Product</h2>
                <div className="space-y-2 max-h-96 overflow-y-auto">
                    {getVariablesByType('product').map(v => (
                        <button key={v.id} onClick={() => handleProductSelect(v.id)} className="w-full text-left p-3 bg-neutral-800 rounded-lg hover:bg-neutral-700">
                            <p className="font-semibold">{v.name}</p>
                            <p className="text-sm text-neutral-400">{v.description}</p>
                        </button>
                    ))}
                </div>
            </Modal>}

            {isPersonaOpen && <Modal isOpen={isPersonaOpen} onClose={() => setIsPersonaOpen(false)}>
                <h2 className="text-xl font-bold mb-4">Select Persona</h2>
                <div className="space-y-2 max-h-96 overflow-y-auto">
                    {getVariablesByType('persona').map(v => (
                        <button key={v.id} onClick={() => handlePersonaSelect(v.id)} className="w-full text-left p-3 bg-neutral-800 rounded-lg hover:bg-neutral-700">
                            <p className="font-semibold">{v.name}</p>
                            <p className="text-sm text-neutral-400">{v.description}</p>
                        </button>
                    ))}
                </div>
            </Modal>}

            {isTrendOpen && <Modal isOpen={isTrendOpen} onClose={() => setIsTrendOpen(false)}>
                <h2 className="text-xl font-bold mb-4">Select Trend</h2>
                <div className="space-y-2 max-h-96 overflow-y-auto">
                    {getVariablesByType('trend').map(v => (
                        <button key={v.id} onClick={() => handleTrendSelect(v.id)} className="w-full text-left p-3 bg-neutral-800 rounded-lg hover:bg-neutral-700">
                            <p className="font-semibold">{v.name}</p>
                            <p className="text-sm text-neutral-400">{v.description}</p>
                        </button>
                    ))}
                </div>
            </Modal>}
        </div>
    )
}
